  UMgo is Un_Membre_du_gouvernement_S (URac, UOri, URel, UTer, UScr, UBvo),
  LCmi is Le_Conseil_des_ministres_S (URac, UOri, URel, UTer, UScr, UBvo, UTle, UMin, UPmi),
  LGou is Le_Gouvernement_S (URac, UOri, URel, UTle, UOrd, UDec, UTer, UScr, UBvo, UOde, UMgo),
  LPre is Le_President_de_la_republique_S (URac, UOri, URel, UTer, UScr, UBvo, UFra)
)=

-- Titre II Article 13-a-1 - Le Président de la République signe les ordonnances ... délibérées en conseil des ministres. 

  signature le_president_de_la_republique_signe_une_ordonnance : LPre -> UOrd -> bool;

  signature le_conseil_des_ministres_delibere_sur_une_ordonnance : LCmi -> UOrd -> bool;

-- Titre II Article 13-a-2 - Le Président de la République signe ... les décrets délibérés en conseil des ministres. 

  signature le_president_de_la_republique_signe_un_decret : LPre -> UDec -> bool;

  signature le_conseil_des_ministres_delibere_sur_un_decret : LCmi -> UDec -> bool;

  property article_13_a : all lpre : LPre, all uord : UOrd, all lcmi : LCmi,
  le_president_de_la_republique_signe_une_ordonnance (lpre, uord) ->
  le_conseil_des_ministres_delibere_sur_une_ordonnance (lcmi, uord);

  property article_13_b : all lpre : LPre, all udec : UDec, all lcmi : LCmi,
  le_president_de_la_republique_signe_un_decret (lpre, udec) ->
  le_conseil_des_ministres_delibere_sur_un_decret (lcmi, udec);

