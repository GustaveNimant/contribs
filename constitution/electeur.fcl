open "basics";;
open "elu";;
open "francais";;
open "scrutin";;

species Electeur_S (S is Scrutin_S, E is Elu_S (S)) =

  inherit Francais_S;	
  
  signature est_adulte : Self -> bool;

  signature numero_carte_electeur : int;

  signature est_represente_par : Self -> E ;

  signature participe_au_scrutin : Self -> S -> bool;

  let est_electeur (e : Self) = est_adulte (e); 

  property ont_le_droit_de_vote : all e : Self, est_electeur (e);

end
;;

