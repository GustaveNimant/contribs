open "basics";;
open "un_scrutin";;
open "un_elu";;
open "un_electeur";;
open "electorat";;
open "parlement";;

species Souverainete_Nationale_S (Scr is Un_Scrutin_S, 
                                  Elu is Elu_S (Scr), 
                                  Eur is Electeur_S (Elu, Scr),
                                  Eat is Electorat_S (Scr, Elu, Eur)
                                  ) =

-- Article 3 a - La souveraineté nationale appartient au peuple qui l'exerce par ses représentants et par la voie du référendum. 

  signature souverainete_nationale_appartient_au_peuple : Eat -> bool;

  signature souverainete_nationale_exercee_par_representant : Elu -> bool;

  signature souverainete_nationale_exercee_par_referendum : Eur -> bool;

  property article_3_a_souverainete_nationale_appartient_au_peuple : all e : Eat, (souverainete_nationale_appartient_au_peuple (e));

  property article_3_a_souverainete_nationale_exercee_par_representant : all e : Elu, (souverainete_nationale_exercee_par_representant (e));

  property article_3_a_souverainete_nationale_exercee_par_referendum : all e : Eur, (souverainete_nationale_exercee_par_referendum (e));

  property article_3_a_souverainete_nationale : 
       article_3_a_souverainete_nationale_exercee_par_representant
    \/ article_3_a_souverainete_nationale_exercee_par_referendum ;

-- Article 3 b - Aucune section du peuple ni aucun individu ne peut s'en attribuer l'exercice.


end;;

