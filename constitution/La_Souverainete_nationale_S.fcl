open "basics";;
open "Finite_Set_S";;
open "Le_Parlement_S";;
open "Un_Bureau_de_vote_S";;
open "Un_Citoyen_electeur_S";;
open "Un_Elu_S";;
open "Un_Scrutin_S";;
open "Un_Territoire_S";;

species La_Souverainete_nationale_S (
  UScr is Un_Scrutin_S, 
  UTer is Un_Territoire_S,
  UBvo is Un_Bureau_de_vote_S (UTer),
  UELu is Un_Elu_S (UScr, UTer, UBvo), 
  UCel is Un_Citoyen_electeur_S (UScr, UTer, UELu),
  UCel_set is Finite_Set_S (UCel)
) =
    
-- Article 3 a - La souveraineté nationale appartient au peuple qui l'exerce par ses représentants et par la voie du référendum. 

  signature souverainete_nationale_appartient_au_peuple : UCel_set -> bool;

  signature souverainete_nationale_exercee_par_representant : UELu -> bool;

  signature souverainete_nationale_exercee_par_referendum : UCel -> bool;

  property article_3_a_souverainete_nationale_appartient_au_peuple : all e : UCel_set, (souverainete_nationale_appartient_au_peuple (e));

  property article_3_a_souverainete_nationale_exercee_par_representant : all e : UELu, (souverainete_nationale_exercee_par_representant (e));

  property article_3_a_souverainete_nationale_exercee_par_referendum : all e : UCel, (souverainete_nationale_exercee_par_referendum (e));

  property article_3_a_souverainete_nationale : 
       article_3_a_souverainete_nationale_exercee_par_representant
    \/ article_3_a_souverainete_nationale_exercee_par_referendum ;

-- Article 3 b - Aucune section du peuple ni aucun individu ne peut s'en attribuer l'exercice.

end;;

