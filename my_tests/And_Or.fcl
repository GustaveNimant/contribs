open "basics";;

theorem and_or :
  all a b : bool, (a /\ b) -> (a \/ b)
  proof =
  <1>1 assume a : bool, b : bool,
       hypothesis h1: a /\ b,
       prove a \/ b
       <2>1 prove a
            by hypothesis h1
       <2>2 prove b
            by hypothesis h1
       <2>3 qed
            by step <2>1, <2>2
  <1>2 conclude
            (* or: qed conclude
            or even: qed by step <1>1 *) 
;;