open "basics";;

theorem Not_A_Or_B_equivalent_A_implies_B :
  all a b : bool, (~ a \/ b) <-> (a -> b)
  proof = 
    <1>1 assume a : bool, b : bool,
         hypothesis h : (~ a \/ b),
         prove (a -> b) 
         by hypothesis h
    <1>2 conclude
;;