(* Modus Ponens si a et a -> b alors b *)

open "basics";;

theorem Modus_Ponens : 
  all a b : bool, ( a /\ (a -> b)) -> b
  proof = 
    <1>1 assume a b : bool,
         hypothesis h1 : a,
         prove a
         by hypothesis h1
    <1>2 assume a b : bool,
         hypothesis h2 : (a -> b),
         prove (a -> b) 
         by hypothesis h2
    <1>3 qed by step <1>1, <1>2
;;
