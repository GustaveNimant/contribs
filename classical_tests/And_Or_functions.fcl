open "basics";;

species Test =

  signature est_a : Self -> bool;

  signature est_b : Self -> bool;
 
  theorem and_or :
  all s : Self, (est_a (s) /\ est_b (s)) -> (est_a (s) \/ est_b (s))
  proof =
    <1>1 assume s : Self,
    hypothesis h1: est_a (s) /\ est_b (s),
    prove est_a (s) \/ est_b (s)
    <2>1 prove est_a (s)
    by hypothesis h1
       <2>2 prove est_b (s)
       by hypothesis h1
       <2>3 qed
       by step <2>1, <2>2
       <1>2 conclude
       (* or: qed conclude
       or even: qed by step <1>1 *) 
       ;
end;;